{
    "name": "vanilla-rest-client",
    "version": "1.2.0",
    "description": "A vanilla, no-dependency client for sending REST requests.",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "type": "module",
    "scripts": {
        "build": "rm -rf dist && tsc",
        "lint": "eslint --cache --ext js --ext ts ./",
        "lint:fix": "eslint --cache --fix --ext js --ext ts ./",
        "test": "jest --passWithNoTests --detectOpenHandles",
        "test:watch": "jest --watch"
    },
    "eslintConfig": {
        "extends": "lintification",
        "rules": {
            "arrow-body-style": "off",
            "no-async-promise-executor": "off"
        }
    },
    "devDependencies": {
        "@swc/core": "^1.10.1",
        "@swc/jest": "^0.2.37",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.9.0",
        "eslint-config-lintification": "^1.0.1",
        "jest": "^29.7.0",
        "nock": "^14.0.1",
        "nodemon": "^3.1.9",
        "ts-jest": "^29.2.5",
        "ts-jest-resolver": "^2.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "8.7.0"
    },
    "keywords": [
        "http",
        "https",
        "rest",
        "client",
        "axios",
        "ajax",
        "typescript"
    ],
    "author": {
        "name": "beanc16",
        "url": "https://github.com/beanc16"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/beanc16/vanilla-rest-client.git"
    },
    "bugs": {
        "url": "https://github.com/beanc16/vanilla-rest-client/issues"
    },
    "homepage": "https://github.com/beanc16/vanilla-rest-client#readme"
}
